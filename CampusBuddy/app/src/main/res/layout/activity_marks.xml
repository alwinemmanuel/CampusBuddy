<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/area_bgf"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvUsr"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/edit"
            android:layout_margin="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Student Name"
            android:background="@drawable/edit"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:drawableLeft="@drawable/ic_person"
            android:textColorHint="#3195BD"
            android:id="@+id/etSnm"
            android:padding="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spSem"
            android:paddingBottom="10dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Subject Name"
            android:background="@drawable/edit"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_subject"
            android:drawablePadding="10dp"
            android:textColorHint="#3195BD"
            android:id="@+id/etSub"
            android:padding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Total Mark"
            android:background="@drawable/edit"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_whatshot"
            android:drawablePadding="10dp"
            android:textColorHint="#3195BD"
            android:id="@+id/etTm"
            android:padding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Obtained Mark"
            android:background="@drawable/edit"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_whatshot"
            android:drawablePadding="10dp"
            android:textColorHint="#3195BD"
            android:id="@+id/etOm"
            android:padding="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spPF"
            android:paddingBottom="10dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/area_bgs"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp">

            <Button
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/button"
                android:text="Submit"
                android:onClick="sbm"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>