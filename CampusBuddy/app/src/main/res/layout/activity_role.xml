<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CBF1E5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/role_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/role_bg1">

            <Button
                android:id="@+id/bt-Faculty"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/button"
                android:text="Faculty"
                android:onClick="facSes"
                android:textColor="#fff"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"/>

            <Button
                android:id="@+id/bt-Student"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button"
                android:text="Student"
                android:onClick="stuSes"
                android:textColor="#fff"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/role_bg1"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAR"
                android:layout_gravity="center"
                android:text="Already Registered"
                android:textSize="18sp"
                android:textColor="#1DE9B6"
                android:layout_margin="10dp"
                android:onClick="vSp"/>

            <Spinner
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/spRole"
                android:padding="20dp"
                android:background="@drawable/spinner_bg"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="gone"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>