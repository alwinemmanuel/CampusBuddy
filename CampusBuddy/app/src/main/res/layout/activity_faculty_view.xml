<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FacultyViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/inner_bg"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:background="@drawable/edit"
            android:textSize="22sp"
            android:textColor="#651FFF"
            android:gravity="center"
            android:id="@+id/tv_usr"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/com_shp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <Spinner
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/sp_day"
            android:layout_gravity="center"
            android:background="@drawable/spinner_bg"
            android:paddingBottom="20dp"
            android:layout_margin="20dp"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/etSm"
            android:background="@drawable/spinner_bg"
            android:hint="Enter Sem"
            android:textColorHint="#2979FF"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/inner_bg"
        android:gravity="center"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btVn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:text="View Now"
            android:textColor="#fff"
            android:onClick="vn" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_margin="10dp">
    </TableLayout>

</LinearLayout>